<resources>
    <!-- Base application theme. -->
    <style name="Theme.LearningProgressStory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LearningProgressStory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LearningProgressStory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LearningProgressStory.MaterialComponent" parent="Theme.MaterialComponents" />

    <style name="Theme.LearningProgressStory.BaseCardView" parent="Theme.LearningProgressStory.MaterialComponent">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>
</resources>