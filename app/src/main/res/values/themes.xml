<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningProgressStory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LearningProgressStory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LearningProgressStory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LearningProgressStory.MaterialComponent" parent="Theme.MaterialComponents" />

    <style name="Theme.LearningProgressStory.BaseCardView" parent="Theme.LearningProgressStory.MaterialComponent">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="Theme.LearningProgressStory.Component.TextView" parent="Theme.LearningProgressStory.MaterialComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableStart">@drawable/ic_mode</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/icon_color</item>
    </style>
</resources>